// import logo from "../assets/astro.svg"; // Replace with your actual logo
// import heroImage from "../assets/hero-image.svg"; // Optional hero visual
import "../styles/global.css";
---

<div
    class="min-h-screen bg-gradient-to-br from-white to-gray-100 text-gray-800 font-sans"
>
    <header
        class="flex items-center justify-between px-6 py-4 shadow-sm bg-white"
    >
        <a href="/" class="flex items-center gap-2">
            <!-- <img src={logo.src} alt="EthicalTech UK Logo" class="h-8 w-auto" /> -->
            <span class="text-xl font-semibold tracking-tight"
                >EthicalTech UK</span
            >
        </a>
        <nav class="space-x-6 text-sm font-medium">
            <a href="#services" class="hover:text-indigo-600">Services</a>
            <a href="#about" class="hover:text-indigo-600">About</a>
            <a href="#contact" class="hover:text-indigo-600">Contact</a>
        </nav>
    </header>

    <main
        class="flex flex-col items-center justify-center text-center px-6 py-20"
    >
        <!-- <img src={heroImage.src} alt="" class="max-w-md mb-8" /> -->
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
            Ethical Web Solutions for a Better Future
        </h1>
        <p class="text-lg text-gray-600 max-w-xl mb-6">
            We craft accessible, privacy-first digital experiences for
            mission-driven organizations.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
            <a
                href="#contact"
                class="px-6 py-3 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition"
            >
                Get in Touch
            </a>
            <a
                href="#services"
                class="px-6 py-3 border border-indigo-600 text-indigo-600 rounded-lg hover:bg-indigo-50 transition"
            >
                Explore Services
            </a>
        </div>
    </main>

    <section id="news" class="max-w-xl mx-auto px-6 py-12 text-left">
        <h2 class="text-2xl font-semibold mb-2">Latest Update</h2>
        <p class="text-gray-700 mb-4">
            EthicalTech UK is proud to launch our new accessibility audit
            service. Ensure your site meets WCAG standards and delivers
            inclusive experiences.
        </p>
        <a
            href="/blog/accessibility-audit"
            class="text-indigo-600 hover:underline">Read more â†’</a
        >
    </section>

    <footer class="text-center text-sm text-gray-500 py-6 border-t">
        &copy; 2025 EthicalTech UK. Built with Astro & Tailwind.
    </footer>
</div>
